        android:bottom="0dp"
        android:left="1dp"
        android:right="1dp"
        >

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <solid android:color="@color/colorLightGrey"
                />
