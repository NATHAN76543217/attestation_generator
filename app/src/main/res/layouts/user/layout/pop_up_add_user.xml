<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAlphaBlack"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="20dp">
                <Button
                    android:id="@+id/back_bt"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/popUpTitle"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/newUserTitle"
                android:textSize="@dimen/popUpNewTitleSize"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                />
            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popUpName"
                android:textSize="@dimen/popUpSubtitleSize"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/colorPopUpSubtitle"
                />


            <EditText
                android:id="@+id/popUpGetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/popUpGetName"
                android:minWidth="300dp"
                android:imeOptions="actionNext"
                android:singleLine="true"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popUpCity"
                android:textSize="@dimen/popUpSubtitleSize"
                android:textColor="@color/colorPopUpSubtitle"
                android:textStyle="bold"

                />
            <EditText
                android:id="@+id/popUpGetCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/popUpGetCity"
                android:minWidth="300dp"
                android:singleLine="true"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popUpAdresse"
                android:textSize="@dimen/popUpSubtitleSize"
                android:textColor="@color/colorPopUpSubtitle"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/popUpGetAdresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/popUpGetAdresse"
                android:minWidth="300dp"
                android:singleLine="true"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popUpBirthplace"
                android:textSize="@dimen/popUpSubtitleSize"
                android:textStyle="bold"
                android:textColor="@color/colorPopUpSubtitle"
                />
            <EditText
                android:id="@+id/popUpGetBirthplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/popUpGetBirthplace"
                android:minWidth="300dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                />

            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popUpBirthday"
                android:textSize="@dimen/popUpSubtitleSize"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/colorPopUpSubtitle"
                />

            <DatePicker
                android:id="@+id/popUpGetBirthday"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_gravity="center"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"/>

            <Button
                android:id="@+id/popUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>