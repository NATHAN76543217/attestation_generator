<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--couleur appBar-->
        <item name="colorPrimary">@color/navHeaderSubtitleColor</item>
        <!--couleur top appBar-->
        <item name="colorPrimaryDark">#254C75</item>
        <!--couleur Attest icon-->
        <item name="colorAccent">@color/navHeaderSubtitleColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="notice_title">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="notice_subtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>
    <style name="notice_corps">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="buttonApp">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorwhite</item>
    </style>

</resources>
